#!/bin/bash

set -euo pipefail

ulimit -s unlimited

MY_DIR=$(cd "$(dirname "$0")"; pwd)
ICON_DIR=$(cd "${MY_DIR}/../.."; pwd)

# These paths are critical to proper loggin by buildbot
VE_DIR="${ICON_DIR}/build/ve"
VH_DIR="${ICON_DIR}/build/vh"

if [ ! -z "${BB_NAME-}" ] ; then
  MAKE_PROCS=22
else
  MAKE_PROCS=8
fi

mkdir -p ${VE_DIR} && cd ${VE_DIR}
${ICON_DIR}/config/dkrz/aurora.VE.nfort-5.0.1_mpi-3.4.0 --disable-openmp "$@"
make -j ${MAKE_PROCS} |& tee make.log

# copy around the generated system description because the buildbot-scripting
# needs it
cat run/set-up.info
cp -v run/set-up.info ${ICON_DIR}/run

mkdir -p ${VH_DIR} && cd ${VH_DIR}
${ICON_DIR}/config/dkrz/aurora.VH.gcc_mpi-3.4.0 --disable-openmp "$@"
make -j ${MAKE_PROCS} |& tee make.log

cd ${ICON_DIR}

export VECTOR_BINARY="${VE_DIR}/bin/icon"
export HOST_BINARY="${VH_DIR}/bin/icon"
