#!/bin/bash

set -eu
unset CDPATH

SCRIPT_DIR=$(cd "$(dirname "$0")"; pwd)
ICON_DIR=$(cd "${SCRIPT_DIR}/../.."; pwd)

MODULES='gcc/11.2.0-gcc-11.2.0'
MODULES=''

SW_ROOT='/sw/spack-levante'

HDF5_ROOT="${SW_ROOT}/hdf5-1.12.1-kxfaux"
HDF5_LIBS='-lhdf5 -lhdf5_hl'

NETCDF_ROOT="${SW_ROOT}/netcdf-c-4.8.1-6qheqr"
NETCDF_LIBS='-lnetcdf'

NETCDFF_ROOT="${SW_ROOT}/netcdf-fortran-4.5.3-jlxcfz"
NETCDFF_LIBS='-lnetcdff'

ECCODES_ROOT="${SW_ROOT}/eccodes-2.21.0-4ywkk4"
ECCODES_LIBS='-leccodes'

MKL_ROOT="${SW_ROOT}/intel-oneapi-mkl-2022.0.1-ttdktf/mkl/2022.0.1"
MKL_LDFLAGS="-L${MKL_ROOT}/lib/intel64  -Wl,-rpath -Wl,${MKL_ROOT}/lib/intel64"
MKL_LIBS="-Wl,--no-as-needed -lmkl_gf_lp64  -lmkl_sequential -lmkl_core -lpthread -lm -ldl"

#MKL_FCFLAGS="-fdefault-integer-8  -m64  -I${MKL_ROOT}/include" does not compile mpi tests
MKL_FCFLAGS="-m64  -I${MKL_ROOT}/include"

XML2_ROOT="/usr"
XML2_LIBS='-lxml2'

PYTHON='/usr/bin/python3'

MPI_ROOT="${SW_ROOT}/openmpi-4.1.2-mnmady"
################################################################################

BUILD_ENV=" module use /sw/spack-levante/spack/modules/linux-rhel8-zen3 ; . \"${SCRIPT_DIR}/module_switcher\"; switch_for_module ${MODULES}; export LD_LIBRARY_PATH=\"${HDF5_ROOT}/lib:${NETCDF_ROOT}/lib:${NETCDFF_ROOT}/lib:${ECCODES_ROOT}/lib64:${MKL_ROOT}/lib/intel64\${LD_LIBRARY_PATH}\";"

CC="${MPI_ROOT}/bin/mpicc"
CFLAGS='-g -march=native -mpc64'
ICON_CFLAGS='-O2'
ICON_BUNDLED_CFLAGS='-O2'
CPPFLAGS="-I${HDF5_ROOT}/include -I${NETCDF_ROOT}/include -I${ECCODES_ROOT}/include -I${XML2_ROOT}/include/libxml2 ${MKL_FCFLAGS}"

FC="${MPI_ROOT}/bin/mpif90"
FCFLAGS="-I${NETCDFF_ROOT}/include -std=f2008 -fmodule-private -fimplicit-none -fmax-identifier-length=63 -Wall -Wcharacter-truncation -Wconversion -Wunderflow -Wunused-parameter -Wno-surprising -fall-intrinsics -g -march=native -mpc64"
ICON_FCFLAGS="-fbacktrace -fbounds-check -fstack-protector-all -finit-real=nan -finit-integer=-2147483648 -finit-character=127 -O2 -DDO_NOT_COMBINE_PUT_AND_NOCHECK -std=legacy "
ICON_OCEAN_FCFLAGS='-O3 -std=legacy'

LDFLAGS="-L${HDF5_ROOT}/lib -L${NETCDF_ROOT}/lib -L${NETCDFF_ROOT}/lib -L${ECCODES_ROOT}/lib64 -L${XML2_ROOT}/lib ${MKL_LDFLAGS}"
LIBS="-Wl,--as-needed ${XML2_LIBS} ${MKL_LIBS} ${ECCODES_LIBS} ${NETCDFF_LIBS} ${NETCDF_LIBS} ${HDF5_LIBS}"

MPI_LAUNCH="${MPI_ROOT}/bin/mpiexec"

EXTRA_CONFIG_ARGS='--enable-parallel-netcdf --enable-yaxt --enable-coupling --enable-grib2'

################################################################################

"${ICON_DIR}/configure" \
PYTHON="${PYTHON}" \
BUILD_ENV="${BUILD_ENV}" \
CC="${CC}" \
CFLAGS="${CFLAGS}" \
CPPFLAGS="${CPPFLAGS}" \
FC="${FC}" \
FCFLAGS="${FCFLAGS}" \
ICON_BUNDLED_CFLAGS="${ICON_BUNDLED_CFLAGS}" \
ICON_CFLAGS="${ICON_CFLAGS}" \
ICON_FCFLAGS="${ICON_FCFLAGS}" \
ICON_OCEAN_FCFLAGS="${ICON_OCEAN_FCFLAGS}" \
LDFLAGS="${LDFLAGS}" \
LIBS="${LIBS}" \
MPI_LAUNCH="${MPI_LAUNCH}" \
${EXTRA_CONFIG_ARGS} \
"$@"

for arg in "$@"; do
  case $arg in
    -help | --help | --hel | --he | -h | -help=r* | --help=r* | --hel=r* | --he=r* | -hr* | -help=s* | --help=s* | --hel=s* | --he=s* | -hs*)
      test -n "${EXTRA_CONFIG_ARGS}" && echo '' && echo "This wrapper script ('$0') calls the configure script with the following extra arguments, which might override the default values listed above: ${EXTRA_CONFIG_ARGS}"
      exit 0 ;;
  esac
done

# Copy runscript-related files when building out-of-source:
if test $(pwd) != $(cd "${ICON_DIR}"; pwd); then
  echo "Copying runscript input files from the source directory..."
  rsync -uavz ${ICON_DIR}/run . --exclude='*.in' --exclude='.*' --exclude='standard_*'
  ln -sf -t run/ ${ICON_DIR}/run/standard_*
  ln -sf set-up.info run/SETUP.config
  rsync -uavz ${ICON_DIR}/externals . --exclude='.git' --exclude='*.f90' --exclude='*.F90' --exclude='*.c' --exclude='*.h' --exclude='*.Po' --exclude='tests' --exclude='rrtmgp*.nc' --exclude='*.mod' --exclude='*.o'
  rsync -uavz ${ICON_DIR}/make_runscripts .
  ln -sf ${ICON_DIR}/data
  ln -sf ${ICON_DIR}/vertical_coord_tables
fi

