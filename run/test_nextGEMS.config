#
# Test setup for nextGEMS runs
#
# Defaults are set for use in buildbot
#

EXP_TYPE = nextgems_cycle2-R2B4
EXP_OPTIONS = ngc2_output, buildbot
ENVIRONMENT = levante

WORK_ROOT = $MODEL_ROOT
DATA_ROOT = $MODEL_ROOT

INTERVAL = P1D
FINAL_DATE = 'add_days($INITIAL_DATE, 1)'

[namelists]
  [[NAMELIST_atm]]
    [[[parallel_nml]]]
      num_io_procs = 6
  [[NAMELIST_oce]]
    [[[parallel_nml]]]
      num_io_procs = 2

[jobs]
  [[run]]
    time_limit = 10
    [[[batch]]]
      switch = 1
