#
# Settings needed for buildbot jobs
#

VERSION_ = $$Id$$

ACCOUNT = mh0156

# Use model root for all output
USER = buildbot

[files]
  [[buildbot]]
    $MODEL_DIR/run/LOG.${EXP_ID}.config.run.o = $SCRIPT_DIR/$EXP_ID.run.*$$SLURM_JOB_ID.log

# Use a single batch job for all runs
[jobs]
  [[run]]
    # move 'run' to end of list
    .trigger -= run
    .trigger += run
    qos = buildbot
    batch_command = $ksh
  [[post,mon]]
    .type = serial
