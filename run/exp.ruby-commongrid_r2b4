if [[ "$initialiseOcean" == "fromClimatology" ]]; then
  INDIR="${ocean_data_InputFolder}/initial_conditions/r0001"
  add_link_file $INDIR/ts_phc3.0_annual_icon_grid_${ocean_gridID}_${ocean_refinement}_G_L40.nc initial_state.nc
fi
